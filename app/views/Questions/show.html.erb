<tr>
Title: <%= @question.title %>
</tr>

<tr>
  Description: <%= @question.description %>
</tr>
<td><%= link_to "Edit", edit_question_path(@question) %> </td>
<td><%= link_to "Delete", {:controller => "questions",:action =>
'destroy', :id => @question.id }, :method => :delete %> </td>


<ul>Answers: <% @question.answers.each do |answer|%>
  <li><%= answer.description %></li>
  <% end %></ul>

<tr><%= form_for @answer,url: question_answers_path(@question) do |f| %>
  <p>

    <%= f.label :Your_answer %><br />
    <%= f.text_area :description, rows:5 %>
  </p>
  <p><%= f.submit "Answer this question" %></p>
<% end %></tr>
